{
    "compilerOptions": {
        "strict": true, //strict모드
        "module": "CommonJS",
        "alwaysStrict": true,
        "noImplicitAny": true, //strict모드의 하위 속성 (세부적으로 조작가능)
        "noImplicitThis": true, //동일
        "sourceMap": true,
        "downlevelIteration": true,
        "lib": ["es6", "dom"]
    }
}
